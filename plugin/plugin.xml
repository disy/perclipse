<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.perfidix.perclipse.plugin.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="org.perfidix.perclipse.plugin.Perspective"
            id="org.perfidix.perclipse.plugin.perspective">
      </perspective>
   </extension>
   <extension
         id="org_perfidix_perclipse_product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.perfidix.perclipse.plugin.application"
            name="Perclipse Product">
      </product>
   </extension>

</plugin>
